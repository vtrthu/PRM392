<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Background gradient -->
    <View
        android:id="@+id/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Headline1"
        android:textColor="@color/primary"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premium Gaming Platform"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text" />



    <!-- Menu Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Start Game Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_game_button"
                style="@style/Widget.AviatorCrash.Button.Success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/start_game"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart" />

            <!-- History Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/history_button"
                style="@style/Widget.AviatorCrash.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/game_history"
                app:icon="@drawable/ic_history"
                app:iconGravity="textStart" />

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_button"
                style="@style/Widget.AviatorCrash.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/settings"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_button"
                style="@style/Widget.AviatorCrash.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Logout"
                app:icon="@drawable/ic_exit"
                app:iconGravity="textStart" />

            <!-- Exit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exit_button"
                style="@style/Widget.AviatorCrash.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/disabled_button"
                android:text="@string/exit"
                app:icon="@drawable/ic_exit"
                app:iconGravity="textStart" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Footer -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Chỉ dành cho mục đích giải trí"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Body2"
        android:textColor="@color/text_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
