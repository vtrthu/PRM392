<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_game_background"
    tools:context=".GameActivity">

    <!-- Background Neon Glow Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/neon_glow_background" />

    <!-- Main Game Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top HUD Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/top_hud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#30ffffff"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back"
                    android:tint="@android:color/white" />

                <!-- Game Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Trò đời"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#80ffffff"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <!-- Balance Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#30ffffff"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/balance"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#00ff88" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Educational Tuition Meter -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tuition_meter_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#40ffffff"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/header_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="💰 Học phí còn lại"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tuition_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,870,000 VND"
                        android:textColor="#00ff88"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/tuition_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#00ff88"
                    android:progressBackgroundTint="#40ffffff" />

                <!-- Warning Text (initially hidden) -->
                <TextView
                    android:id="@+id/tuition_warning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="⚠️ Cảnh báo: Học phí đang cạn kiệt!"
                    android:textColor="#ff6b35"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Educational Enrollment Deadline -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/enrollment_deadline_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#40ff6b35"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tuition_meter_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏰ Hạn đăng ký môn học"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/enrollment_countdown_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 ngày 23:59:30"
                    android:textColor="#ffcc02"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Central Game View Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/game_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/enrollment_deadline_card"
            app:layout_constraintBottom_toTopOf="@id/bottom_hud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Animated Game View (Airplane) - KEEP LOGIC -->
            <com.example.aviatorcrash.game.GameView
                android:id="@+id/game_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Game Status HUD -->
            <androidx.cardview.widget.CardView
                android:id="@+id/status_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#30ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Game Status -->
                    <TextView
                        android:id="@+id/game_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/waiting"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <!-- Multiplier Display - MAIN FEATURE -->
                    <TextView
                        android:id="@+id/multiplier_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/multiplier"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:textColor="#00ff88"
                        android:shadowColor="#8000ff88"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="12" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Crash Point Display -->
            <TextView
                android:id="@+id/crash_point_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/crash_at"
                android:textSize="14sp"
                android:textColor="#ff6b35"
                android:textStyle="bold"
                android:visibility="gone"
                android:background="#30ffffff"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/status_card" />

            <!-- Current Bet & Win Info -->
            <LinearLayout
                android:id="@+id/bet_info_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:background="#30ffffff"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/crash_point_text">

                <TextView
                    android:id="@+id/current_bet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_amount"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/win_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_won"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00ff88"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Live Leaderboard - Repositioned -->
            <androidx.cardview.widget.CardView
                android:id="@+id/leaderboard_card"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#30ffffff"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏆 Live Players"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bot_leaderboard_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scrollbars="none" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Bottom Control HUD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_hud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#30ffffff"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Educational Indicators Row -->
                <LinearLayout
                    android:id="@+id/educational_indicators"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Expected Value (EV) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📊 Kỳ vọng"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/expected_value_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-2,500 VND"
                            android:textColor="#ff6b35"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- House Edge -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏦 Lợi thế nhà cái"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/house_edge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0%"
                            android:textColor="#ff6b35"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Betting Controls Row -->
                <LinearLayout
                    android:id="@+id/betting_controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Bet Amount Input -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="#30ffffff"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/bet_amount_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Học phí"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:hintTextColor="@android:color/white">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bet_amount_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@android:color/white"
                                android:textColorHint="#80ffffff"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Place Bet Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/place_bet_button"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="Lên đường"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#00ff88"
                        app:cornerRadius="12dp"
                        android:shadowColor="#8000ff88"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="8" />

                </LinearLayout>

                <!-- Game Action Buttons Row -->
                <LinearLayout
                    android:id="@+id/game_controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <!-- Cash Out Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cashout_button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Rút học phí"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#ff6b35"
                        app:cornerRadius="15dp"
                        android:enabled="false" />

                    <!-- Next Round Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/next_round_button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Kỳ tiếp theo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#667eea"
                        app:cornerRadius="15dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>