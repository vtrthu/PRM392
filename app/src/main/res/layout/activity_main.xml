<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="800dp"
        android:padding="16dp">

        <!-- Animated Background Elements -->
        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/gradient_button_primary"
            android:alpha="0.1"
            android:rotation="45"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-100dp"
            android:layout_marginEnd="-100dp" />

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/gradient_button_success"
            android:alpha="0.1"
            android:rotation="30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-75dp"
            android:layout_marginStart="-75dp" />

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Logo -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logofpt"
                    android:scaleType="centerInside" />

            </androidx.cardview.widget.CardView>

            <!-- Title with Glow -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#80ffffff"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÒN THỞ LÀ CÒN GỠ"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:layout_marginBottom="48dp" />

        </LinearLayout>

        <!-- Main Menu Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Menu Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game Menu"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Start Game Button - Primary -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/start_game_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="BẮT ĐẦU"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:background="@drawable/gradient_button_success"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_play"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white" />

                </androidx.cardview.widget.CardView>

                <!-- History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/history_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="LỊCH SỬ"
                    android:textSize="14sp"
                    android:textColor="#667eea"
                    android:backgroundTint="#f8f9ff"
                    app:strokeColor="#667eea"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_history"
                    app:iconGravity="textStart"
                    app:iconTint="#667eea"
                    android:layout_marginBottom="12dp" />

                <!-- Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="CÀI ĐẶT"
                    android:textSize="14sp"
                    android:textColor="#667eea"
                    android:backgroundTint="#f8f9ff"
                    app:strokeColor="#667eea"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="textStart"
                    app:iconTint="#667eea"
                    android:layout_marginBottom="12dp" />

                <!-- Deposit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deposit_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="NẠP TIỀN"
                    android:textSize="14sp"
                    android:textColor="#27ae60"
                    android:backgroundTint="#f0fff4"
                    app:strokeColor="#27ae60"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    app:iconTint="#27ae60"
                    android:layout_marginBottom="12dp" />

                <!-- Withdraw Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/withdraw_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="RÚT TIỀN"
                    android:textSize="14sp"
                    android:textColor="#e67e22"
                    android:backgroundTint="#fff8f0"
                    app:strokeColor="#e67e22"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    app:iconTint="#e67e22"
                    android:layout_marginBottom="12dp" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ĐĂNG XUẤT"
                    android:textSize="14sp"
                    android:textColor="#e74c3c"
                    android:backgroundTint="#fff5f5"
                    app:strokeColor="#e74c3c"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_exit"
                    app:iconGravity="textStart"
                    app:iconTint="#e74c3c"
                    android:layout_marginBottom="12dp" />

                <!-- Exit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exit_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="THOÁT"
                    android:textSize="12sp"
                    android:textColor="#95a5a6"
                    android:backgroundTint="#f8f9fa"
                    app:strokeColor="#dee2e6"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_exit"
                    app:iconGravity="textStart"
                    app:iconTint="#95a5a6" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Features Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/features_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#80ffffff"
            app:layout_constraintTop_toBottomOf="@id/menu_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian thực"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaming"
                        android:textSize="10sp"
                        android:textColor="#7f8c8d" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏆"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bảng xếp hạng"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaderboard"
                        android:textSize="10sp"
                        android:textColor="#7f8c8d" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🛡️"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bảo mật"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platform"
                        android:textSize="10sp"
                        android:textColor="#7f8c8d" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Trao niềm tin - Nhận tài lộc"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            app:layout_constraintTop_toBottomOf="@id/features_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>