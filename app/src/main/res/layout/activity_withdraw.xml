<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_withdraw_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="800dp"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💸 RÚT TIỀN"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rút tiền về tài khoản ngân hàng của bạn"
                android:textSize="18sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="8dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </LinearLayout>

        <!-- Withdraw Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/withdraw_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:cardBackgroundColor="#40ffffff"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Amount Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💵 Số tiền rút (VND)"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/withdraw_amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/gradient_card_input_background"
                        android:padding="16dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#CCCCCC"
                        android:hint="Nhập số tiền muốn rút"
                        android:inputType="number"
                        android:maxLength="12"
                        android:importantForAutofill="no"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- Bank Account Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏦 Số tài khoản ngân hàng"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/bank_account_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/gradient_card_input_background"
                        android:padding="16dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#CCCCCC"
                        android:hint="1234567890"
                        android:inputType="number"
                        android:maxLength="20"
                        android:importantForAutofill="no"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- Bank Name Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏛️ Tên ngân hàng"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/bank_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/gradient_card_input_background"
                        android:padding="16dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#CCCCCC"
                        android:hint="Vietcombank, BIDV, Agribank..."
                        android:inputType="text"
                        android:maxLength="30"
                        android:importantForAutofill="no"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- Account Holder Name Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👤 Tên chủ tài khoản"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/account_holder_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/gradient_card_input_background"
                        android:padding="16dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#CCCCCC"
                        android:hint="NGUYEN VAN A"
                        android:inputType="textCapCharacters"
                        android:maxLength="30"
                        android:importantForAutofill="no"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- Withdraw Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/withdraw_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="💸 RÚT TIỀN NGAY"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/gradient_button_primary"
                    android:textColor="@android:color/white"
                    app:cornerRadius="28dp"
                    android:elevation="4dp"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Back to Main Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_main_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Quay lại menu chính"
            android:textSize="16sp"
            android:backgroundTint="#40ffffff"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/withdraw_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
