<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/player_rank"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Caption"
        android:textColor="@color/text_secondary"
        android:gravity="center" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:text="Player01"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Body2"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/player_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="10K"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Caption"
        android:textColor="@color/text_secondary"
        android:minWidth="32dp"
        android:gravity="end" />

    <TextView
        android:id="@+id/player_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2.50x"
        android:textAppearance="@style/TextAppearance.AviatorCrash.Body2"
        android:textColor="@color/success"
        android:minWidth="48dp"
        android:gravity="end" />

</LinearLayout>
